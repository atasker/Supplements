<% content_for :head do %>
  <title><%= @supplement.name %>: Benefits, Uses and Side Effects | HealthBravo</title>
  <meta name="description" content="website description < 300 chars">
<% end %>

<nav aria-label="Breadcrumb" class="breadcrumb">
  <ol>
    <li>
      <a href="<%= root_path %>">Home</a>
    </li>
    <li>
      <a href="<%= supplements_path %>">Supplements</a>
    </li>
    <li>
      <a href="<%= category_path(@category) %>"><%= @category.description%></a>
    </li>
    <li>
      <%= @supplement.name %>
    </li>
  </ol>
</nav>

<p>
  <strong>ID:</strong>
  <%= @supplement.id %>
</p>

<p>
  <strong>Name:</strong>
  <%= @supplement.name %>
</p>
 
<p>
  <strong>AKA:</strong>
  <%= @supplement.aka %>
</p>

<% if @supplement.author_id != nil %>

  <p>
    <strong>Author:</strong>
    <%= Author.find(@supplement.author_id).name %>
  </p>

<% end %>

<% if @supplement.category_id != nil %>

  <p>
    <strong>Category:</strong>
    <%= Category.find(@supplement.category_id).description %>
  </p>

<% end %>