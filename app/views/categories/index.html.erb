<h1>All Categories</h1>

<table>
  <tr>
  	<th>ID</th>
    <th>Description</th>
    <th>Slug</th>
  </tr>
 
  <% @categories.each do |category| %>
    <tr>
      <td><%= category.id %></td>
      <td><%= category.description %></td>
      <td><%= category.slug %></td>
      <td><%= link_to 'Show', category_path(category) %></td>
    </tr>
  <% end %>
</table>