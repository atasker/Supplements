<% content_for :head do %>
  <title>All Articles</title>
  <meta name="description" content="website description < 300 chars">
<% end %>

<h1>Article Index</h1>

<%= link_to "Home", root_path %>

<table>
  <tr>
    <th>ID</th>
    <th>Title</th>
    <th>Body</th>
    <th>Lead</th>
    <th>Category ID</th>
    <th>TODO: Add author table and article reference</th>
    <th>Image</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= article.id %></td>
      <td><%= article.title %></td>
      <td><%= article.body %></td>
      <td><%= article.lead %></td>
      <td><%= article.category_id %></td>
      <td>Author goes here</td>
      <td><%= article.image %></td>
      <td><%= link_to 'Show', article_path(article) %></td>
    </tr>
  <% end %>
</table>